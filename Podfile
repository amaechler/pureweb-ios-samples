workspace 'PureWebSamples'

platform :ios, '7.0'

PUREWEB='PureWeb'

xcodeproj 'Scribble/Scribble.xcodeproj'
target 'Scribble' do
    xcodeproj 'Scribble/Scribble.xcodeproj'
    pod "#{PUREWEB}", :path => "../pureweb-ios-sdk/PureWeb.podspec"

end

xcodeproj 'Asteroids/Asteroids.xcodeproj'
target 'Asteroids' do
    xcodeproj 'Asteroids/Asteroids.xcodeproj'
    pod "#{PUREWEB}", :path => "../pureweb-ios-sdk/PureWeb.podspec"

end 

xcodeproj 'DDx/DDx.xcodeproj'
target 'DDx' do
    xcodeproj 'DDx/DDx.xcodeproj'
    pod "#{PUREWEB}", :path => "../pureweb-ios-sdk/PureWeb.podspec"

end

